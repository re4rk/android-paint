<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.customVeiw.PaintingPaper
            android:id="@+id/paintingPaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rs_slider"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:valueFrom="0.0f"
                android:valueTo="100.0f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvColors"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_main_colors" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEraser"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_baseline_eraser_32"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUndo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_baseline_undo_32"
                    android:enabled="false"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRedo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_baseline_redo_32"
                    android:enabled="false"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClear"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_baseline_clear_32"
                    android:padding="8dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
